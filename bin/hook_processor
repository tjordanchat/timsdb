#!/usr/bin/env python 
from subprocess import Popen, PIPE
import socket 
from shlex import split
import json, re, os

host = '' 
port = 6060
backlog = 5 
size = 1024 

s = socket.socket(socket.AF_INET, socket.SOCK_STREAM) 
s.bind((host,port)) 
s.listen(backlog) 
while 1: 
    client, address = s.accept() 
    data = client.recv(size) 
    client.close()
    client, address = s.accept() 
    data = client.recv(size) 
    if data: 
       try:
         m = re.search("{.*",data)
         t = "%s\"}]}" % m.group()
         j = json.loads(t)
         remote = j['repository']['url'].replace(":","/")
         command="git archive --remote=ssh://%s develop build.yml | tar xvf -" % remote
         p = Popen(command , shell=True, stdout=PIPE, executable="/bin/bash")
         out, err = p.communicate()
         if p.returncode == 0:
            f = open("build.yml")
            lines = f.readlines()
            f.close
            env = ' '.join(lines).replace('\n',',').replace(' ','')
            print env
            print remote
            os.system("java -jar /home/JJordan/jenkins-cli.jar -i /home/JJordan/.ssh/id_rsa build Builds/JetBlue_Builds -p env=%s -p url=%s" % (env, remote))
       except:
          print
    client.close()
